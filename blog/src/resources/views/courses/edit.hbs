<div class="mt-4">
    <h3>Cập nhập khóa học</h3>

        <form class="mt-4" method="POST" action="/courses/{{course/_id}}?_method=PUT">
            <div class="mb-3">
                <label for="name" class="form-label">Tên khóa học</label>
                <input value="{{course.name}}" name="name" type="text" class="form-control" id="name" >
            </div>

            <div class="mb-3">
                <label for="decription" class="form-label">Mô tả</label>
                <textarea name="decription" class="form-control" id="decription"> {{course.decription}}</textarea>
            </div>

            <div class="mb-3">
                <label for="videoId" class="form-label">Video</label>
                <input value="{{course.videoId}}" name="videoId" type="text" class="form-control" id="videoId">
            </div>

            <div class="mb-3">
                <label for="level" class="form-label">Trình độ</label>
                <input value="{{course.level}}" name="level" type="text" class="form-control" id="level">
            </div>
            
            <button type="submit" class="btn btn-primary">Cập nhập</button>
    </form>
</div>