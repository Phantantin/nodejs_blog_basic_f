<div class="mt-4">
    <h3>Đăng khóa học</h3>

        <form method="POST" action="/courses/store">
            <div class="mb-3">
                <label for="name" class="form-label">Tên khóa học</label>
                <input name="name" type="text" class="form-control" id="name" >
            </div>

            <div class="mb-3">
                <label for="decription" class="form-label">Mô tả</label>
                <input name="decription" type="text" class="form-control" id="decription">
            </div>

            <div class="mb-3">
                <label for="videoId" class="form-label">Video</label>
                <input name="videoId" type="text" class="form-control" id="videoId">
            </div>

            <div class="mb-3">
                <label for="level" class="form-label">Trình độ</label>
                <input name="level" type="text" class="form-control" id="level">
            </div>
            
            <button type="submit" class="btn btn-primary">Thêm khóa học</button>
    </form>
</div>